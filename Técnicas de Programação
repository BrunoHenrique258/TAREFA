atividade9.ts

function converterFahrenheitParaCelsius() {
    const temperaturaFahrenheit: number = 212; 
    const temperaturaCelsius: number = ((temperaturaFahrenheit - 32) / 9) * 5;
    
    console.log("Temperatura em Fahrenheit:", temperaturaFahrenheit);
    console.log("Temperatura em Celsius:", temperaturaCelsius.toFixed(2));
}

converterFahrenheitParaCelsius();


atividade5.ts

let totalEleitores: number = 10000;  
let votosBrancos: number = 800;      
let votosNulos: number = 600;        
let votosValidos: number = 8600;     
let votosCandidato: number = 900;    

let totalVotosValidosBrancos = votosBrancos + votosValidos;

let percentualVotosCandidato = (votosCandidato / totalVotosValidosBrancos) * 100;

let percentualVotosEleitores = (votosCandidato / totalEleitores) * 100;


if (percentualVotosCandidato > 10) {
    console.log("O candidato foi eleito!");
} else {
    console.log("O candidato não foi eleito.");
}


console.log("Percentual de votos do candidato em relação à soma de votos válidos + brancos: " + percentualVotosCandidato + "%");
console.log("Percentual de votos do candidato em relação ao total de eleitores: " + percentualVotosEleitores + "%");


atividade6.ts


let salarioAtual: number = 700;  


let percentualReajuste: number;
let salarioReajustado: number;


if (salarioAtual <= 650) {
    percentualReajuste = 10;  
} else {
    percentualReajuste = 5;   
}


salarioReajustado = salarioAtual * (1 + percentualReajuste / 100);


console.log("Salário original: R$ " + salarioAtual);
console.log("Percentual de reajuste: " + percentualReajuste + "%");
console.log("Salário reajustado: R$ " + salarioReajustado);


atividade7.ts

let X: number = 5;
let Y: number = 5;
let Z: number = 5;


if (X + Y > Z && Y + Z > X && X + Z > Y) {

    if (X === Y && Y === Z) {
        console.log("Triângulo Equilátero");
    } else if (X === Y || Y === Z || X === Z) {
        console.log("Triângulo Isósceles");
    } else {
        console.log("Triângulo Escaleno");
    }
} else {
    console.log("Não forma um triângulo");
}



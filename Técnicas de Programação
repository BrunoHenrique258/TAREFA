atividade6.ts

let nomes: string[] = ["Ana", "Carlos", "João", "Maria", "José"];
let notas: number[][] = [
    [7, 8],  // Ana
    [6, 7],  // Carlos
    [9, 10], // joão
    [5, 6],  // Maria
    [8, 9]   // José
];

let medias: number[] = [];

for (let i = 0; i < 5; i++) {
    medias.push((notas[i][0] + notas[i][1]) / 2); 
}

for (let i = 0; i < 5; i++) {
    console.log("Aluno: " + nomes[i]);
    console.log("Notas: " + notas[i][0] + ", " + notas[i][1]);
    console.log("Média: " + medias[i]);
    console.log('-----------------------------');
}

atividade7.ts

function gerarNumeroAleatorio(): number {
    return Math.floor(Math.random() * 100) + 1;
}

let v1: number[] = [];
let v2: number[] = [];

for (let i = 0; i < 10; i++) {
    v1.push(gerarNumeroAleatorio());
    v2.push(gerarNumeroAleatorio());
}

let v3: number[] = [...v1, ...v2];  

console.log("Vetor v1:", v1);
console.log("Vetor v2:", v2);
console.log("Vetor v3 (juntando v1 e v2):", v3);


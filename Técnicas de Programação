atividade9.ts

function gerarNumeroAleatorio3(): number {
    return Math.floor(Math.random() * 100) + 1;
}

let vetorAleatorio: number[] = [];  

for (let i = 0; i < 30; i++) {
    vetorAleatorio.push(gerarNumeroAleatorio3());
}

console.log("Números gerados no vetor:");
console.log(vetorAleatorio);

let maiorNumero = vetorAleatorio[0];  
let menorNumero = vetorAleatorio[0];  
let posicaoMaior = 0;
let posicaoMenor = 0;

for (let i = 1; i < vetorAleatorio.length; i++) {
    if (vetorAleatorio[i] > maiorNumero) {
        maiorNumero = vetorAleatorio[i];
        posicaoMaior = i;
    }
    if (vetorAleatorio[i] < menorNumero) {
        menorNumero = vetorAleatorio[i];
        posicaoMenor = i;
    }
}

console.log("Maior número: " + maiorNumero + " na posição " + posicaoMaior);
console.log("Menor número: " + menorNumero + " na posição " + posicaoMenor);

atividade10.ts

function gerarNumeroAleatorio4(): number {
    return Math.floor(Math.random() * 100) + 1;
}

function gerarMatrizQuadrada(tamanho: number): number[][] {
    let matriz: number[][] = [];
    
    for (let i = 0; i < tamanho; i++) {
        let linha: number[] = [];
        for (let j = 0; j < tamanho; j++) {
            linha.push(gerarNumeroAleatorio4());
        }
        matriz.push(linha);
    }

    return matriz;
}

function somarPrimeiraLinha(matriz: number[][]): number[][] {
    let matrizModificada = matriz.map((linha, index) => {
        return linha.map((valor, j) => valor + matriz[0][j]);
    });

    return matrizModificada;
}

function exibirMatriz(matriz: number[][]): void {
    for (let i = 0; i < matriz.length; i++) {
        console.log(matriz[i].join(" "));
    }
}

const tamanho: number = 5; 

let matrizOriginal = gerarMatrizQuadrada(tamanho);
let matrizModificada = somarPrimeiraLinha(matrizOriginal);

console.log("Matriz Original:");
exibirMatriz(matrizOriginal);

console.log("\nMatriz Modificada (somando a primeira linha a todas as demais):");
exibirMatriz(matrizModificada);

atividade10.ts

function calcularReajuste() {
    
    let nome: string = "João";         
    let categoria: string = "A";       
    let salario: number = 2000;        

    let aumento: number = 0;           
    let salarioReajustado: number;     

    
    switch (categoria) {
        case "A":
        case "C":
        case "F":
        case "H":
            aumento = 0.10;  
            break;
        case "B":
        case "D":
        case "E":
        case "I":
        case "J":
        case "T":
            aumento = 0.15;  
            break;
        case "K":
        case "R":
            aumento = 0.25;  
            break;
        case "L":
        case "M":
        case "N":
        case "O":
        case "P":
        case "Q":
        case "S":
            aumento = 0.35;  
            break;
        case "U":
        case "V":
        case "X":
        case "Y":
        case "W":
        case "Z":
            aumento = 0.50;  
            break;
        default:
            console.log("Categoria inválida.");
            return;  
    }

   
    salarioReajustado = salario + (salario * aumento);

    
    console.log(`Nome do Funcionário: ${nome}`);
    console.log(`Categoria: ${categoria}`);
    console.log(`Salário Original: R$ ${salario}`);
    console.log(`Percentual de Aumento: ${(aumento * 100)}%`);
    console.log(`Salário Reajustado: R$ ${salarioReajustado}`);
}


calcularReajuste();

